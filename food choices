#include<stdio.h>
int main()
{
    int x;
    printf("Enter a number between 1-5 : ");
    scanf("%d",&x); //scaning the choices
    switch(x) //Display based on their choice using switch cases.
    {
        case 1:
            printf("Food item - Burger \nPrice - Rs129\n");  //if entered choice is 1 it will print Burger-129.
            break;
        case 2:
            printf("Food item - French Fries \nPrice - Rs99\n");  //if entered choice is 2 it will print French Fries-99.
            break;
        case 3:
            printf("Food item - Sandwich \nPrice - Rs149\n");  //if entered choice is 3 it will print Sandwich-149.
            break;
        case 4:
            printf("Food item - Pizza \nPrice - Rs239\n");  //if entered choice is 4 it will print Pizza-239.
            break;
        case 5:
            printf("Food item - Pasta \nPrice - Rs179\n");  //if entered choice is 5 it will print pasta-179.
            break;
        default:
            printf("Invalid choice \n");  //if the entered choice is greater than 5 it will print Invalid statement.
            break;
    }
    return 0;
}
